    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.getElementById('game-board-toggle-id');
        const standardForm = document.getElementById('form-classic-view');
        const enhancedForm = document.getElementById('form-enhanced-view');

        // Check localStorage (or default to false)
        const isEnhanced = localStorage.getItem('enhancedView') === 'true';

        // Show the correct form immediately
        if (isEnhanced) {
          enhancedForm.style.display = 'block';
          standardForm.style.display = 'none';
          toggle.checked = true;
        } else {
          standardForm.style.display = 'block';
          enhancedForm.style.display = 'none';
          toggle.checked = false;
        }

        // Toggle handler
        toggle.addEventListener('change', function () {
          if (toggle.checked) {
            localStorage.setItem('enhancedView', 'true');
            standardForm.style.display = 'none';
            enhancedForm.style.display = 'block';
          } else {
            localStorage.setItem('enhancedView', 'false');
            standardForm.style.display = 'block';
            enhancedForm.style.display = 'none';
          }
        });
      });
    </script>
  </div>
  <!-- Background animation layer -->
  <div id="xo-background">
    <% 50.times do %>
      <% char = ['X', 'O', 'ðŸ’¥', 'ðŸ›¦', 'ðŸ’¥ðŸš€'].sample %>
      <% top = rand %>
      <% left = rand %>
      <% delay = rand %>
      <% size = [12, 14, 16, 18, 20].sample %>
      <span class="xo" style="
      --rand-top: <%= top %>;
      --rand-left: <%= left %>;
      --rand-delay: <%= delay %>;
      font-size: <%= size %>px;
    "><%= char %></span>
    <% end %>
  </div>
  <style>
    #xo-background {
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
      pointer-events: none;
    }

    #xo-background .xo {
      position: absolute;
      font-weight: bold;
      color: rgba(0, 0, 0, 0.2);
      top: calc(100% * var(--rand-top));
      left: calc(100% * var(--rand-left));
      animation: floatXO 25s linear infinite;
      animation-delay: calc(-25s * var(--rand-delay));
    }

    @keyframes floatXO {
      0% {
        transform: translateY(0) scale(1) rotate(0deg);
        opacity: 1;
      }
      100% {
        transform: translateY(-120vh) scale(1.2) rotate(360deg);
        opacity: 0;
      }
    }

    .btn-reset-game {
