<div id="form-classic-view">
  <%= form_with url: game_move_path, method: :post, local: true do %>
    <div style="position: relative; width: 450px; height: 450px; margin: auto; background: white;">
      <%# Horizontal lines %>
      <div style="position: absolute; top: 150px; left: 0; width: 100%; height: 3px; background: black;"></div>
      <div style="position: absolute; top: 300px; left: 0; width: 100%; height: 3px; background: black;"></div>
      <%# Vertical lines %>
      <div style="position: absolute; left: 150px; top: 0; height: 100%; width: 3px; background: black;"></div>
      <div style="position: absolute; left: 300px; top: 0; height: 100%; width: 3px; background: black;"></div>
      <% 9.times do |index| %>
        <% row = index / 3 %>
        <% col = index % 3 %>
        <% top = row * 150 %>
        <% left = col * 150 %>
        <% cell = @board[index] %>
        <% disabled = cell.present? || session[:game_over] %>
        <% btn_style = "position: absolute; top: #{top}px; left: #{left}px; width: 150px; height: 150px; color: black; font-size: 48px; border: none; background: none;" %>
        <% if disabled %>
          <button disabled style="<%= btn_style %>">
            <%= cell %>
          </button>
        <% else %>
          <button type="submit"
                  name="cell"
                  value="<%= index %>"
                  style="<%= btn_style %>; cursor: pointer;">
            &nbsp;
          </button>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
